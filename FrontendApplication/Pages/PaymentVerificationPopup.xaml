<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendApplication.Pages.PaymentVerificationPopup"
             BackgroundColor="White"
             Padding="20">
    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
        <Label Text="Please confirm that you have completed the payment."
               FontSize="18"
               HorizontalOptions="Center" />
        <CheckBox x:Name="PaymentCheckBox" />
        <Label Text="I have completed the payment."
               FontSize="14"
               HorizontalOptions="Center" />
        <Button Text="Confirm"
                Clicked="OnConfirmClicked"
                BackgroundColor="#007AFF"
                TextColor="White"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>