<?xml version="1.0" encoding="utf-8" ?>
<popup:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="FrontendApplication.Popups.AddExpensePopup">

    <!-- Use a Frame to create a styled popup container -->
    <Frame BackgroundColor="#FFFFFF"
           CornerRadius="15"
           Padding="20"
           WidthRequest="300"
           HeightRequest="400"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           HasShadow="True">
           
        <VerticalStackLayout Spacing="15">

            <Label Text="Add Expense"
                   FontSize="20"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="#4A4A4A" />

            <Entry x:Name="AmountEntry"
                   Placeholder="Amount"
                   Keyboard="Numeric"
                   FontSize="16"
                   TextColor="#333" />

            <Entry x:Name="DescriptionEntry"
                   Placeholder="Description"
                   FontSize="16"
                   TextColor="#333" />

            <Button Text="Submit"
                    Command="{Binding AddExpenseCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10" />

            <Button Text="Cancel"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    CornerRadius="10" />

        </VerticalStackLayout>
    </Frame>

</popup:Popup>