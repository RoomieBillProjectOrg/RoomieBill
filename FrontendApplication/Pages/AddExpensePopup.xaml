<?xml version="1.0" encoding="utf-8" ?>
<popup:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="FrontendApplication.Popups.AddExpensePopup">

    <Frame BackgroundColor="#E0F7FA"
       CornerRadius="20"
       Padding="20"
       WidthRequest="350"
       HeightRequest="650"
       VerticalOptions="Center"
       HorizontalOptions="Center"
       HasShadow="True">

        <Grid RowDefinitions="*, Auto">
            <!-- Scrollable Content -->
            <ScrollView Grid.Row="0">
                <VerticalStackLayout Spacing="20">
                    <!-- Title -->
                    <Label Text="Add Expense"
                        FontSize="22"
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        TextColor="#00695C" />

                    <!-- Amount Entry -->
                    <VerticalStackLayout>
                        <Label Text="Amount:"
                            FontSize="16"
                            TextColor="#00695C"
                            FontAttributes="Bold" />
                        <Entry x:Name="AmountEntry"
                            Placeholder="Enter amount"
                            Keyboard="Numeric"
                            FontSize="16"
                            BackgroundColor="#FFFFFF"
                            TextColor="#333"
                            HeightRequest="40"
                            Margin="0,5,0,0" />
                    </VerticalStackLayout>

                    <!-- Description Entry -->
                    <VerticalStackLayout>
                        <Label Text="Description:"
                            FontSize="16"
                            TextColor="#00695C"
                            FontAttributes="Bold" />
                        <Entry x:Name="DescriptionEntry"
                            Placeholder="Enter description"
                            FontSize="16"
                            BackgroundColor="#FFFFFF"
                            TextColor="#333"
                            HeightRequest="40"
                            Margin="0,5,0,0" />
                    </VerticalStackLayout>

                    <!-- Divide Dropdown -->
                    <VerticalStackLayout>
                        <Label Text="Divide:"
                            FontSize="16"
                            TextColor="#00695C"
                            FontAttributes="Bold" />
                        <Picker x:Name="DividePicker"
                                Title="Select division type"
                                FontSize="16"
                                BackgroundColor="#FFFFFF"
                                TextColor="#333"
                                HeightRequest="40"
                                SelectedIndexChanged="OnDividePickerChanged">
                            <Picker.Items>
                                <x:String>Equally</x:String>
                                <x:String>Custom</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Custom Percentages -->
                    <VerticalStackLayout x:Name="CustomPercentageLayout" IsVisible="False">
                        <Label Text="Custom Percentages:"
                            FontSize="16"
                            TextColor="#00695C"
                            FontAttributes="Bold" />
                        <CollectionView ItemsSource="{Binding Members}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10" ColumnDefinitions="*, Auto">
                                        <Label Text="{Binding Member.Username}" FontSize="16" TextColor="#333" />
                                        <Entry Placeholder="%" Keyboard="Numeric" WidthRequest="50"
                                            Text="{Binding CustomPercentage}" BackgroundColor="#FFFFFF" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Fixed Buttons at the Bottom -->
            <HorizontalStackLayout Grid.Row="1" Spacing="10" HorizontalOptions="Center">
                <Button Text="CANCEL"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#B0BEC5"
                        TextColor="White"
                        CornerRadius="20"
                        FontSize="18"
                        Padding="10" />
                <Button Text="SUBMIT"
                        Command="{Binding AddExpenseCommand}"
                        BackgroundColor="#FF5722"
                        TextColor="White"
                        CornerRadius="20"
                        FontSize="18"
                        Padding="10" />
            </HorizontalStackLayout>
        </Grid>
    </Frame>
</popup:Popup>