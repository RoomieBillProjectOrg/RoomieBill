<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FrontendApplication.Pages"
             x:Class="FrontendApplication.Pages.GroupViewPage"
             Title="Group View Page"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="My Home"
                   FontSize="28"
                   HorizontalOptions="Center"
                   TextColor="#222831"
                   FontAttributes="Bold"
                   Margin="0,20,0,10" />

            <!-- Group Members Section -->
            <Label Text="All Roomies"
                   FontSize="22"
                   HorizontalOptions="Center"
                   TextColor="#00ADB5"
                   FontAttributes="Bold"
                   Padding="0,10,0,5" />

            <!-- Add Roomie Button -->
                <Button Text="Add Roomie"
                        BackgroundColor="#00ADB5"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="20"
                        HorizontalOptions="Center"
                        WidthRequest="180"
                        Clicked="OnAddRoomieClicked" />
                        
            <!-- Grid for Group Members -->
            <!-- Group Members List -->
            <CollectionView ItemsSource="{Binding Members}"
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="3" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Username}"
                                BackgroundColor="#00ADB5"
                                TextColor="White"
                                FontSize="18"
                                CornerRadius="15"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:GroupViewPage}}, Path=OnMemberClicked}"
                                CommandParameter="{Binding .}"
                                Padding="10"
                                Margin="5" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- The Shame Table Section -->
            <Label Text="The Shame Table"
                   FontSize="22"
                   TextColor="#4CAF50"
                   FontAttributes="Bold"
                   Padding="0,20,0,5" />

            <!-- Grid for Shame Table -->
            <!-- Shame Table Grid -->
            <CollectionView ItemsSource="{Binding ShameTable}"
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#4CAF50"
                            Padding="10"
                            Margin="5"
                            CornerRadius="12"
                            HasShadow="True"
                            BackgroundColor="#FFF9F9">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:GroupViewPage}}, Path=OnShameTableItemTapped}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding debtor.Username, StringFormat='{0} owes you'}"
                                    FontSize="18"
                                    TextColor="#222831" />
                                <Label Text="{Binding amount, StringFormat='{0:C}'}"
                                       FontSize="14"
                                       TextColor="#222831" />
                                <Label Text="{Binding amount, StringFormat='{0:C}'}"
                                       FontSize="16"
                                       TextColor="#4CAF50"
                                       FontAttributes="Bold" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="ðŸŽ‰ Congratulations, youâ€™re the friend's ATM ðŸ§ðŸ˜‚"
                FontSize="16"
                TextColor="#B0BEC5"
                HorizontalOptions="Center"
                IsVisible="{Binding IsShameTableEmpty}" />

            <!-- Your Owns Section -->
            <Label Text="Your Owns"
                   FontSize="22"
                   TextColor="#FF5722"
                   FontAttributes="Bold"
                   Padding="0,20,0,5" />

            <!-- Your Owns Grid -->
            <CollectionView ItemsSource="{Binding YourOwnsTable}"
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#FF5722"
                            Padding="10"
                            Margin="5"
                            CornerRadius="12"
                            HasShadow="True"
                            BackgroundColor="#F9FFF9">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:GroupViewPage}}, Path=OnYourOwnsItemTapped}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding creditor.Username, StringFormat='You owe {0}'}"
                                    FontSize="18"
                                    TextColor="#222831" />
                                <Label Text="{Binding amount, StringFormat='{0:C}'}"
                                       FontSize="14"
                                       TextColor="#222831" />
                                <Label Text="{Binding amount, StringFormat='{0:C}'}"
                                       FontSize="16"
                                       TextColor="#FF5722"
                                       FontAttributes="Bold" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="ðŸ‘ Debt-free and living large! ðŸ’¸ðŸ˜Ž"
                FontSize="16"
                TextColor="#B0BEC5"
                HorizontalOptions="Center"
                IsVisible="{Binding IsYourOwnsTableEmpty}" />

            <!-- Action Buttons -->
            <HorizontalStackLayout Spacing="15"
                                   Padding="10,20,10,0"
                                   HorizontalOptions="Center">
                <Button Text="View Transactions"
                        BackgroundColor="#00ADB5"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="20"
                        WidthRequest="180"
                        HeightRequest="50"
                        Clicked="OnViewTransactionClicked" />
                <Button Text="Add Expense"
                        BackgroundColor="#00ADB5"
                        TextColor="White"
                        Margin="10"
                        CornerRadius="10"
                        FontSize="18"
                        Clicked="OnAddExpenseClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
