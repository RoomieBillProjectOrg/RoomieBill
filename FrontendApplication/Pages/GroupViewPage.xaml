<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FrontendApplication.Pages"
             x:Class="FrontendApplication.Pages.GroupViewPage"
             Title="Group View Page"
             BackgroundColor="#121212"> <!-- Dark background -->

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="home_icon.png" Text="Home" Order="Primary" Priority="0" Clicked="OnHomePageButtonClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="My Home"
                   FontSize="28"
                   HorizontalOptions="Center"
                   TextColor="#FFFFFF"
                   FontAttributes="Bold"
                   Margin="0,20,0,10" />

            <!-- Group Members Section -->
            <Label Text="All Roomies"
                   FontSize="22"
                   HorizontalOptions="Center"
                   TextColor="#00FFFF" 
                   FontAttributes="Bold"
                   Padding="0,10,0,5" />

            <!-- Add Roomie Button -->
            <Button Text="Add Roomie"
                    BackgroundColor="#1E88E5"
                    TextColor="#FFFFFF"
                    FontSize="18"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    WidthRequest="180"
                    HeightRequest="50"
                    Clicked="OnAddRoomieClicked" />

            <Button Text="Gemini Feedback 💬"
                    BackgroundColor="#673AB7"
                    TextColor="#FFFFFF"
                    FontSize="16"
                    CornerRadius="10"
                    WidthRequest="200"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Clicked="OnGeminiFeedbackClicked" />

            <!-- Grid for Group Members -->
            <CollectionView ItemsSource="{Binding Members}"
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="3" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightSlateGray"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10"
                                Margin="4"
                                Padding="6,4">
                            <Label Text="{Binding Username}"
                                   TextColor="#FFFFFF"
                                   FontSize="12"
                                   HorizontalOptions="Center" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- The Shame Table Section -->
            <Label Text="The Shame Table"
                   FontSize="22"
                   TextColor="#4CAF50"
                   FontAttributes="Bold"
                   Padding="0,20,0,5" />

            <!-- Grid for Shame Table -->
            <CollectionView ItemsSource="{Binding ShameTable}"
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#4CAF50"
                               Padding="10"
                               Margin="5"
                               CornerRadius="10"
                               HasShadow="True"
                               BackgroundColor="#1E1E1E"> <!-- Dark frame -->
                            <VerticalStackLayout>
                                <Label Text="{Binding debtor.Username, StringFormat='{0} owes you'}"
                                       FontSize="18"
                                       TextColor="#FFFFFF" />
                                <Label Text="{Binding amount, StringFormat='{0:N2} NIS'}"
                                       FontSize="16"
                                       TextColor="#4CAF50"
                                       FontAttributes="Bold" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="🎉 Congratulations, you’re the friend's ATM 🏧😂"
                   FontSize="16"
                   TextColor="#B0BEC5" 
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsShameTableEmpty}" />

            <!-- Your Owns Section -->
            <Label Text="Your Owns"
                   FontSize="22"
                   TextColor="#FF5722"
                   FontAttributes="Bold"
                   Padding="0,20,0,5" />
                   
            <!-- Explanation text -->
            <Label Text="To pay your debt, tap the card with your friend's name and amount."
                   FontSize="14"
                   TextColor="LightSlateGray"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <!-- Your Owns Grid -->
            <CollectionView ItemsSource="{Binding YourOwnsTable}"
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#FF5722"
                               Padding="10"
                               Margin="5"
                               CornerRadius="10"
                               HasShadow="True"
                               BackgroundColor="#1E1E1E"> <!-- Dark frame -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:GroupViewPage}}, Path=OnYourOwnsItemTapped}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding creditor.Username, StringFormat='You owe {0}'}"
                                       FontSize="16"
                                       TextColor="#FFFFFF" />
                                <Label Text="{Binding amount, StringFormat='{0:N2} NIS'}"
                                       FontSize="16"
                                       TextColor="#FF5722"
                                       FontAttributes="Bold" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="👏 Debt-free and living large! 💸😎"
                   FontSize="16"
                   TextColor="#B0BEC5"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsYourOwnsTableEmpty}" />

            <!-- Action Buttons -->
            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="10" Padding="10,20,10,0">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="View History Transactions"
                            BackgroundColor="#1E88E5"
                            TextColor="#FFFFFF"
                            FontSize="16"
                            CornerRadius="10"
                            WidthRequest="170"
                            HeightRequest="50"
                            Clicked="OnViewTransactionClicked" />
                    <Button Text="Add Expense"
                            BackgroundColor="#1E88E5"
                            TextColor="#FFFFFF"
                            FontSize="16"
                            CornerRadius="10"
                            WidthRequest="150"
                            HeightRequest="50"
                            Clicked="OnAddExpenseClicked" />
                </HorizontalStackLayout>

                <!-- Payment Reminders Section -->
                <Button Text="Set Payment Reminder"
                        BackgroundColor="DarkSlateBlue"
                        TextColor="#FFFFFF"
                        FontSize="16"
                        CornerRadius="10"
                        WidthRequest="200"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        Clicked="OnAddPaymentReminderClicked" />

                <!-- Reminders List -->
                <CollectionView ItemsSource="{Binding PaymentReminders}"
                              IsVisible="{Binding HasPaymentReminders}"
                              Margin="0,10,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="DarkSlateBlue"
                                   Padding="10"
                                   Margin="5"
                                   CornerRadius="10"
                                   HasShadow="True"
                                   BackgroundColor="#1E1E1E">
                                <Grid ColumnDefinitions="*, Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding Category}"
                                               FontSize="18"
                                               TextColor="#FFFFFF" />
                                        <Label Text="{Binding DayOfMonth, StringFormat='Every {0}th of the month'}"
                                               FontSize="14"
                                               TextColor="#B0BEC5" />
                                    </VerticalStackLayout>
                                    <Button Grid.Column="1"
                                            Text="Delete"
                                            BackgroundColor="#FF5722"
                                            TextColor="#FFFFFF"
                                            FontSize="14"
                                            CornerRadius="5"
                                            HeightRequest="35"
                                            VerticalOptions="Center"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:GroupViewPage}}, Path=DeleteReminderCommand}"
                                            CommandParameter="{Binding Id}"
                                            Margin="10,0,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Exit Group Button -->
                <Button Text="Exit Group"
                        BackgroundColor="#DC3545"
                        TextColor="#FFFFFF"
                        FontSize="16"
                        CornerRadius="10"
                        WidthRequest="200"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        IsVisible="{Binding IsNotAdmin}"
                        Clicked="OnExitGroupClicked" />

                <!-- Delete Group Button - Admin Only -->
                <Button Text="Delete Group"
                        BackgroundColor="#FF0000"
                        TextColor="#FFFFFF"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        WidthRequest="200"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        IsVisible="{Binding IsAdmin}"
                        Clicked="OnDeleteGroupClicked">
                    <Button.Shadow>
                        <Shadow Brush="#FF0000"
                               Offset="0,2"
                               Opacity="0.5"
                               Radius="4"/>
                    </Button.Shadow>
                </Button>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
