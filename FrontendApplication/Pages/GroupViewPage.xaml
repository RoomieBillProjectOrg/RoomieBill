<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             x:Class="FrontendApplication.Pages.GroupViewPage"
             Title="GroupViewPage">
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Group Name -->
            <Label Text="My Home" 
                   FontSize="24" 
                   HorizontalOptions="Center" />

            <!-- All Roomis Section -->
            <Label Text="All Roomis" 
                   FontSize="18" 
                   HorizontalOptions="Center" />
            <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Center">
                <Button Text="Metar" />
                <Button Text="Inbar" />
                <Button Text="Vladi" />
                <Button Text="Tal" />
            </FlexLayout>

            <!-- The Shame Table -->
            <Label Text="The Shame Table" 
                   FontSize="18" 
                   HorizontalOptions="Center" />
            <Frame BackgroundColor="#dddddd" Padding="10" CornerRadius="5">
                <Button Text="Tal owns you 570$" />
                <!-- Add Snooze/Reminder Icon as needed -->
            </Frame>
            <Frame BackgroundColor="#dddddd" Padding="10" CornerRadius="5">
                <Button Text="Metar owns you 50$" />
                <!-- Add Snooze/Reminder Icon as needed -->
            </Frame>

            <!-- Your Owns Section -->
            <Label Text="Your owns" 
                   FontSize="18" 
                   HorizontalOptions="Center" />
            <Frame BackgroundColor="#dddddd" Padding="10" CornerRadius="5">
                <Label Text="You have no debt" />
            </Frame>

            <!-- Buttons for Actions -->
            <Button Text="View Transaction" Clicked="OnViewTransactionClicked" HorizontalOptions="Center" />
            <Button Text="Add Expense" Clicked="OnAddExpenseClicked" HorizontalOptions="Center" />
        </VerticalStackLayout>

    <!-- Bottom Navigation (Optional) -->
    <!-- <HorizontalStackLayout Padding="10" Spacing="20">
        <Image Source="home_icon.png" WidthRequest="30" HeightRequest="30" />
        <Image Source="transaction_icon.png" WidthRequest="30" HeightRequest="30" />
        <Image Source="expense_icon.png" WidthRequest="30" HeightRequest="30" />
    </HorizontalStackLayout> -->
</ContentPage>