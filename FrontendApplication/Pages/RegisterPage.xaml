<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendApplication.Pages.RegisterPage"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <!-- Title -->
            <Label Text="Create new Account" 
                   FontSize="36" 
                   HorizontalOptions="Center" 
                   TextColor="White" 
                   FontAttributes="Bold"/>

            <!-- Name Entry -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Username" 
                       FontSize="14" 
                       TextColor="White" />
                <Entry x:Name="UsernameEntry" 
                       Placeholder="Your Username" 
                       BackgroundColor="#2A2A2A" 
                       TextColor="White"
                       PlaceholderColor="#A9A9A9"
                       HeightRequest="40" />
            </VerticalStackLayout>

            <!-- Email Entry -->
            <VerticalStackLayout Spacing="5">
                <Label Text="EMAIL" 
                       FontSize="14" 
                       TextColor="White" />
                <Entry x:Name="EmailEntry" 
                       Placeholder="israel@post.bgu.ac.il" 
                       Keyboard="Email"
                       BackgroundColor="#2A2A2A"
                       TextColor="White"
                       PlaceholderColor="#A9A9A9"
                       HeightRequest="40" />
            </VerticalStackLayout>

            <!-- Password Entry -->
            <VerticalStackLayout Spacing="5">
                <Label Text="PASSWORD" 
                       FontSize="14" 
                       TextColor="White" />
                <Label Text="* At least 8 chars." 
                       FontSize="12" 
                       TextColor="LightSlateGray" />
                <Label Text="* At least one number." 
                       FontSize="12" 
                       TextColor="LightSlateGray" />
                <Label Text="* At least one upper letter." 
                       FontSize="12" 
                       TextColor="LightSlateGray" />
                <Label Text="* At least one lower letter." 
                       FontSize="12" 
                       TextColor="LightSlateGray" />
                <Label Text="* At least one special char." 
                       FontSize="12" 
                       TextColor="LightSlateGray" />
                <Entry x:Name="PasswordEntry" 
                       IsPassword="True"
                       Placeholder="******" 
                       BackgroundColor="#2A2A2A"
                       TextColor="White"
                       PlaceholderColor="#A9A9A9"
                       HeightRequest="40" />
            </VerticalStackLayout>

            <!-- Password Confirmation Entry -->
            <VerticalStackLayout Spacing="5">
                <Label Text="PASSWORD CONFIRMATION" 
                       FontSize="14" 
                       TextColor="White" />
                <Entry x:Name="PasswordConfirmationEntry" 
                       IsPassword="True"
                       Placeholder="******" 
                       BackgroundColor="#2A2A2A"
                       TextColor="White"
                       PlaceholderColor="#A9A9A9"
                       HeightRequest="40" />
            </VerticalStackLayout>

            <!-- Checkbox -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <CheckBox x:Name="NotRobotCheckBox" />
                <Label Text="I'M NOT A BOT" 
                       VerticalTextAlignment="Center"
                       TextColor="White" />
            </HorizontalStackLayout>

            <!-- Register Button -->
            <Button Text="Sign Up"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="White"
                    BorderWidth="2"
                    HeightRequest="50"
                    CornerRadius="25"
                    Clicked="OnRegisterClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
