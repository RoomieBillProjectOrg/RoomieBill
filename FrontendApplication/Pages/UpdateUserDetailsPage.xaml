<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendApplication.Pages.UpdateUserDetailsPage"
             Title="UpdateUserDetailsPage">
    <StackLayout Padding="20">
        <Label Text="Login Page" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        <Entry x:Name="OldPasswordEntry" Placeholder="OldPassword"/>
        <Entry x:Name="NewPasswordEntry" Placeholder="NewPassword" IsPassword="True"/>
        <Entry x:Name="VeriftNewPasswordEntry" Placeholder="VeriftNewPassword" IsPassword="True"/>
        <Button Text="Update Password" Clicked="OnUpdatePasswordClicked"/>
    </StackLayout>
</ContentPage>