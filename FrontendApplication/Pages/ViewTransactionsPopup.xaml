<?xml version="1.0" encoding="utf-8" ?>
<popup:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="FrontendApplication.Popups.ViewTransactionsPopup">

    <Frame BackgroundColor="#E0F7FA"
           CornerRadius="20"
           Padding="20"
           WidthRequest="350"
           HeightRequest="500"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           HasShadow="True">

        <Grid RowDefinitions="*, Auto">
            <!-- Scrollable Content -->
            <ScrollView Grid.Row="0">
                <VerticalStackLayout Spacing="10">
                    <!-- Title -->
                    <Label Text="Transactions"
                           FontSize="22"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#00695C" />

                    <!-- List of Transactions -->
                    <CollectionView ItemsSource="{Binding Transactions}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#00695C"
                                       Padding="10"
                                       Margin="5"
                                       CornerRadius="12"
                                       HasShadow="True"
                                       BackgroundColor="#FFFFFF">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Description}"
                                               FontSize="16"
                                               TextColor="#333" />
                                        <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}"
                                               FontSize="14"
                                               TextColor="#00695C" />
                                        <!-- Dynamically resolve Payer's name -->
                                        <Label Text="{Binding PayerName, StringFormat='Paid by: {0}'}"
                                               FontSize="14"
                                               TextColor="#00695C" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Close Button at the Bottom -->
            <Button Grid.Row="1"
                    Text="CLOSE"
                    Command="{Binding CloseCommand}"
                    BackgroundColor="#B0BEC5"
                    TextColor="White"
                    CornerRadius="20"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Padding="10" />
        </Grid>
    </Frame>
</popup:Popup>