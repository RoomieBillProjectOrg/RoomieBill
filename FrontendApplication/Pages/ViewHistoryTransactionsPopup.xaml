<?xml version="1.0" encoding="utf-8" ?>
<popup:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="FrontendApplication.Popups.ViewTransactionsPopup">

    <Frame BackgroundColor="#1C1C1C"
           CornerRadius="25"
           Padding="20"
           WidthRequest="380"
           HeightRequest="600"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           HasShadow="True">

        <Grid RowDefinitions="*, Auto">
            <!-- Scrollable Content -->
            <ScrollView Grid.Row="0">
                <VerticalStackLayout Spacing="20" Padding="0,10,0,10">
                    <!-- Title -->
                    <Label Text="Transaction History"
                           FontSize="26"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#FFFFFF"
                           Margin="0,0,0,20" />
                    <!-- Category Filter Picker -->
                    <Picker x:Name="CategoryPicker"
                            Title="Filter by Category"
                            SelectedIndexChanged="OnCategorySelected"
                            ItemsSource="{Binding AvailableCategories}"
                            TextColor="Black"
                            BackgroundColor="White"
                            Margin="0,0,0,10"
                            FontSize="14"
                            HeightRequest="40" />
                    <!-- List of Transactions -->
                    <CollectionView ItemsSource="{Binding Transactions}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#2E2E2E"
                                       Padding="15"
                                       Margin="0,0,0,10"
                                       CornerRadius="15"
                                       HasShadow="False"
                                       BackgroundColor="#2D2D2D">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="{Binding Category}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#FFFFFF" />
                                        <!-- Category and Months Row -->
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Description}"
                                                   FontSize="14"
                                                   TextColor="#A9A9A9" />
                                            <!-- Hide months for Other category -->
                                            <HorizontalStackLayout IsVisible="{Binding HasMonths}"
                                                                  Spacing="5">
                                                <Label Text="|"
                                                       TextColor="#A9A9A9"
                                                       FontSize="14" />
                                                <Label Text="{Binding StartMonth, StringFormat='{0:MMM yyyy}'}"
                                                       TextColor="#A9A9A9"
                                                       FontSize="14" />
                                                <Label Text="-"
                                                       TextColor="#A9A9A9"
                                                       FontSize="14" />
                                                <Label Text="{Binding EndMonth, StringFormat='{0:MMM yyyy}'}"
                                                       TextColor="#A9A9A9"
                                                       FontSize="14" />
                                            </HorizontalStackLayout>
                                        </HorizontalStackLayout>
                                        <Label Text="{Binding Amount, StringFormat='{0:N2} NIS'}"
                                               FontSize="16"
                                               TextColor="#43A047"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding PayerName, StringFormat='Paid by: {0}'}"
                                               FontSize="14"
                                               TextColor="#A9A9A9" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Close Button at the Bottom -->
            <Button Grid.Row="1"
                    Text="CLOSE"
                    Command="{Binding CloseCommand}"
                    BackgroundColor="Grey"
                    TextColor="White"
                    CornerRadius="25"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    HeightRequest="50"
                    Margin="0,15,0,0" />
        </Grid>
    </Frame>
</popup:Popup>
