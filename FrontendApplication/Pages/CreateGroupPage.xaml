<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendApplication.Pages.CreateGroupPage">

    <StackLayout Padding="20">
        <!-- Group Name -->
        <Label Text="Group Name" />
        <Entry x:Name="GroupNameEntry" Placeholder="Enter group name" />

        <!-- Group Members -->
        <Label Text="Group Members (comma separated)" />
        <Entry x:Name="MembersEntry" Placeholder="Enter member usernames" />

        <!-- Submit Button -->
        <Button Text="Create Group" Clicked="OnCreateGroupClicked" />

        <!-- Error Message -->
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
    </StackLayout>
</ContentPage>