<?xml version="1.0" encoding="utf-8" ?>
<popup:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="FrontendApplication.Popups.RegisterVerifyEmailPopup">

    <Frame BackgroundColor="#2A2A2A"
           CornerRadius="20"
           Padding="20"
           WidthRequest="350"
           HeightRequest="650"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           HasShadow="True">

        <Grid RowDefinitions="*, Auto">
            <!-- Scrollable Content -->
            <ScrollView Grid.Row="0">
                <VerticalStackLayout Spacing="20">
                    <!-- Title -->
                    <Label Text="Email Verification"
                        FontSize="22"
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        TextColor="White" />

                    <Label Text="VERIFICATION CODE"
                           FontSize="14" 
                           TextColor="White" />
                    <Entry x:Name="VerificationCodeEntry"
                           Placeholder="Enter the code sent to your email"
                           Keyboard="Numeric"
                           BackgroundColor="#2A2A2A"
                           TextColor="White"
                           PlaceholderColor="#A9A9A9"
                           HeightRequest="40" />
                    <Button Text="Verify Code"
                            BackgroundColor="Black"
                            TextColor="White"
                            BorderColor="White"
                            BorderWidth="2"
                            HeightRequest="50"
                            CornerRadius="25"
                            Clicked="OnVerifyCodeClicked" />
                    </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Frame>
</popup:Popup>
